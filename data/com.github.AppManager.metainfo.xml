    <binary>app-manager</binary>
  </provides>
  <releases>
    <release version="0.1.0-alpha" date="2025-11-17">
      <description>
        <p>Initial preview with drag-and-drop installs, dual install modes, Nautilus menus, and preferences UI.</p>
      </description>
    </release>
  </releases>
